#include <iostream>
#include <string>
#include <iomanip>

using namespace std;

class Account{
public:
  account(string name, float balance);
  void withdrew (float amount);
  void deposit (float amount);
  float getbalance;
protected:
  float balance;
  string accountname;
  unsigned short yearOpen;
private:
  float ssn;
};

class Manage : public Account{
public:
  Manage (string name, float amount, string address) : Account(name, balance){
    propertyaddress=name;
    term = 30:12;
  }
  string getname();
  string getaddress();
  unsigned short remaining term();
private:
  string propertyaddress;
  unsigned short term;
};
